<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <h1>Lead Scores</h1>
    </div>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Lead ID</th>
              <th>Current Score</th>
              <th>Previous Score</th>
              <th>Change</th>
              <th>Last Updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @lead_snapshots.each do |snapshot| %>
              <tr>
                <td><%= snapshot.lead_id %></td>
                <td><%= snapshot.total_score %></td>
                <td><%= snapshot.previous_score %></td>
                <td>
                  <% change = snapshot.total_score.to_i - snapshot.previous_score.to_i %>
                  <span class="<%= change.positive? ? 'text-success' : 'text-danger' %>">
                    <%= change.positive? ? '+' : '' %><%= change %>
                  </span>
                </td>
                <td><%= time_ago_in_words(snapshot.calculated_at) %> ago</td>
                <td>
                  <%= link_to "Details", lead_path(snapshot.lead_id), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= paginate @lead_snapshots, theme: 'bootstrap-5' %>
  </div>
</div>