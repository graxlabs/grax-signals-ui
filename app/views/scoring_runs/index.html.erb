<div class="container mx-auto mt-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Lead Score Runs</h1>
  </div>

  <table class="min-w-full">
    <thead>
      <tr>
        <th>Started At</th>
        <th>Status</th>
        <th>Records Scored</th>
        <th>Duration (min)</th>
        <th>Initiated By</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @runs.each do |run| %>
        <tr>
          <td><%= run.started_at&.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= run.status %></td>
          <td><%= run.records_scored %></td>
          <td><%= run.duration %></td>
          <td><%= run.initiated_by %></td>
          <td><%= link_to 'Details', scoring_run_path(run) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>