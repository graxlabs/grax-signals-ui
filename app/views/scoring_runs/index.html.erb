<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Scoring Runs</h1>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Started At</th>
              <th>Status</th>
              <th>Records Scored</th>
              <th>Duration (min)</th>
              <th>Initiated By</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @runs.each do |run| %>
              <tr>
                <td><%= run.started_at&.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td>
                  <span class="badge <%= status_badge_class(run.status) %>">
                    <%= run.status %>
                  </span>
                </td>
                <td><%= number_with_delimiter(run.records_scored) %></td>
                <td><%= run.duration %></td>
                <td><%= run.initiated_by %></td>
                <td>
                  <%= link_to 'Details', scoring_run_path(run), class: 'btn btn-sm btn-outline-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>