<div class="container py-4">
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Scoring Runs", scoring_runs_path %></li>
      <li class="breadcrumb-item active">Run Details</li>
    </ol>
  </nav>

  <div class="card shadow-sm">
    <div class="card-header bg-white py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">Scoring Run Details</h1>
        <span class="badge <%= status_badge_class(@run.status) %> fs-6">
          <%= @run.status.titleize %>
        </span>
      </div>
    </div>

    <div class="card-body">
      <div class="row g-4">
        <%# Summary Cards %>
        <div class="col-12">
          <div class="row g-3">
            <div class="col-md-3">
              <div class="card bg-light border-0">
                <div class="card-body">
                  <h6 class="text-muted mb-1">Records Scored</h6>
                  <h3 class="mb-0"><%= @run.records_scored || 0 %></h3>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-light border-0">
                <div class="card-body">
                  <h6 class="text-muted mb-1">Records Updated</h6>
                  <h3 class="mb-0"><%= @run.records_updated %></h3>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-light border-0">
                <div class="card-body">
                  <h6 class="text-muted mb-1">Duration</h6>
                  <h3 class="mb-0"><%= @run.duration ? "#{@run.duration}m" : "—" %></h3>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%# Details %>
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header bg-white">
              <h5 class="card-title mb-0">Run Information</h5>
            </div>
            <div class="card-body">
              <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Started At</dt>
                <dd class="col-sm-8"><%= @run.started_at&.strftime("%B %d, %Y %H:%M:%S") || "—" %></dd>

                <dt class="col-sm-4 text-muted">Completed At</dt>
                <dd class="col-sm-8"><%= @run.completed_at&.strftime("%B %d, %Y %H:%M:%S") || "—" %></dd>

                <dt class="col-sm-4 text-muted">Initiated By</dt>
                <dd class="col-sm-8"><%= @run.initiated_by || "—" %></dd>
              </dl>
            </div>
          </div>
        </div>

        <% if @run.error_message.present? %>
          <div class="col-12">
            <div class="card border-danger">
              <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">Error Details</h5>
              </div>
              <div class="card-body">
                <pre class="mb-0 text-danger"><%= @run.error_message %></pre>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>